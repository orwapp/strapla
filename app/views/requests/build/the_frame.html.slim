  = f.input :budget, hint: 'Optional, you don\'t have to provide this information.',
    input_html: { 'data-hint' => 'What´s the financial frame?', 
    'data-example' => 'I have $10k, when that´s spent the app should be accepted at Apple AppStore and available for all markets.',
    class: 'span8 help_text'}
  
  = f.input :due_date, as: :string, 
    input_html: { 'data-hint' => 'When do you need the project ready?', 'data-behaviour' => 'datepicker', 
    class: 'span8 help_text'}
