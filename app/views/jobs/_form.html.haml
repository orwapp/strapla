= simple_form_for(@experience, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f|
  = f.error_notification

  = simple_form_for( [@current_user, @experience]) do |f|
    = f.error_notification
    .form-inputs
      = f.input :title,     :autofocus => true
      = f.input :company,   :autofocus => true
      = f.input :summary, as: :text,   :autofocus => true
      = f.input :from_date, :autofocus => true
      = f.input :to_date, :autofocus => true
      = f.submit 'Save', class: 'btn btn-info'

