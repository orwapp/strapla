.page-header
  = link_to new_experience_path, :class => 'btn btn-primary' do
    %i.icon-plus.icon-white
    New Experience
  %h1 Listing experiences

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @experiences.each do |experience|
      %tr
        %td= link_to 'Show', experience
        %td= link_to 'Edit', edit_experience_path(experience)
        %td= link_to 'Destroy', experience, :confirm => 'Are you sure?', :method => :delete
